    .nav-links a:hover,
    .nav-links a:focus {
        background-color: #bbb; /* ホバー時の背景色 */
    }

    .expanded {
        display: unset;
    }

    /* 画面が広いとき */
    @media screen and (min-width: 636px) {
        .nav-links {
            text-align: center;
            display: block;
            position: static;
            width: auto;
            background: none;
        }

        .nav-links a {
            display: inline-block;
            padding: 15px 20px;
        }
    }
</style>
